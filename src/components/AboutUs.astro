---
import { Image } from 'astro:assets';
import { type ImageMetadata } from 'astro';

export interface AboutProps {
  image: ImageMetadata;
  title: string;
  subtitle: string;
  text: string;
  action_text: string;
  tel?: string;
}

const { title, image, subtitle, text, action_text, tel } = Astro.props as AboutProps;
---

<section
  class="flex items-center justify-center flex-col gap-10 w-full text-light-text dark:text-dark-text"
>
  <h2
    class="text-3xl mt-10 font-bold uppercase text-light-text dark:text-dark-text scroll-animation"
  >
    {title}
  </h2>

  <div
    class="grid grid-cols-1 lg:grid-cols-2 w-full max-w-[1200px] px-4 scroll-animation place-items-center"
  >
    <div class="flex flex-col gap-4 w-full items-center xl:items-start">
      <h3 class="text-[1.6rem] font-semibold">{subtitle}</h3>

      <p class="max-w-[500px] opacity-75">
        {text}
      </p>

      <p>{action_text}</p>
      <a href={`tel:${tel}`} class="font-bold text-3xl">{tel}</a>
    </div>

    <Image
      class="rounded"
      src={image}
      alt="image"
      densities={[1, 2]}
      width={400}
      height={400}
      format="webp"
      quality={75}
      loading="lazy"
      decoding="async"
    />
  </div>
</section>
